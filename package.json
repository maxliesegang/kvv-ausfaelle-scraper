{
  "name": "kvv-ausfaelle-scraper",
  "version": "1.0.0",
  "description": "Scraper for KVV (Karlsruhe) transit cancellations from RSS feeds",
  "type": "module",
  "main": "dist/index.js",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist && npm run build",
    "start": "node dist/index.js",
    "dev": "npm run build && npm run start",
    "fetch-article": "tsx src/fetch-article.ts",
    "test": "node --import tsx --test 'tests/**/*.test.ts'",
    "test:unit": "node --import tsx --test 'tests/unit/**/*.test.ts'",
    "test:integration": "node --import tsx --test 'tests/integration/**/*.test.ts'",
    "test:watch": "node --import tsx --test --watch 'tests/**/*.test.ts'",
    "test:coverage": "c8 npm test",
    "test:parser": "node --import tsx --test tests/unit/parser.test.ts",
    "test:train-lines": "node --import tsx --test tests/unit/train-lines.test.ts",
    "test:fallback": "tsx tests/integration/fallback-matching.ts",
    "train-lines:from-tests": "tsx scripts/train-lines-from-tests.ts",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "npm run type-check && npm run format:check"
  },
  "dependencies": {
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/xml2js": "^0.4.14",
    "c8": "^10.1.3",
    "prettier": "^3.6.2",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  },
  "keywords": [
    "kvv",
    "karlsruhe",
    "transit",
    "scraper",
    "rss",
    "cancellations"
  ]
}
